@model DotnetChat.Models.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
 
<h2>Login</h2>
 
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Login">Ented Login</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" /><br />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" /><br />
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn" />
        </div>
    </div>
</form>